<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/actrial_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorWhite"
        android:alpha="0.7"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/logo_novel"
            />
        <ImageView
            android:id="@+id/actrial_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/week_1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actrial_month"
            android:src="@mipmap/month_1"
            android:layout_alignParentRight="true"
            android:layout_below="@id/actrial_week"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/month_divide"
            android:layout_alignLeft="@id/actrial_week"
            android:layout_below="@id/actrial_week"
            />
        <ImageView
            android:id="@+id/actrial_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/date_6"
            android:layout_toLeftOf="@id/actrial_week"
            android:layout_alignTop="@id/actrial_week"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actrial_date1"
            android:src="@mipmap/date_1"
            android:layout_toLeftOf="@id/actrial_date2"
            android:layout_alignTop="@id/actrial_date2"
            />

    </RelativeLayout>



</FrameLayout>